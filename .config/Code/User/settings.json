{
    "workbench.colorTheme": "Cobalt2",
    "workbench.iconTheme": "ayu",
    "workbench.editor.showTabs": false,
    "workbench.list.automaticKeyboardNavigation": false,  // explorer works more like NERDTree

    "window.zoomLevel": -1.0455173977264463,

    "editor.fontFamily": "'Fantasque Sans Mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.definitionLinkOpensInPeek": true,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.cursorBlinking": "phase",
    "editor.cursorSurroundingLines": 3,
    "editor.minimap.enabled": false,

    "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",

    "files.autoSave": "afterDelay",

    "[elixir]": {
        "editor.formatOnType": true,
        "editor.formatOnSave": true,
    },

    // This allows ctrl-p to function as "previous" in the terminal
    "terminal.integrated.commandsToSkipShell": [
        "-workbench.action.quickOpen"
    ],
    "terminal.integrated.scrollback": 10000,

	"debug.openDebug": "openOnDebugBreak",

	"[dart]": {
		"editor.formatOnSave": true,
		"editor.formatOnType": true,
		"editor.rulers": [80],
		"editor.selectionHighlight": false,
		"editor.suggest.snippetsPreventQuickSuggestions": false,
		"editor.suggestSelection": "first",
		"editor.tabCompletion": "onlySnippets",
		"editor.wordBasedSuggestions": false,
    },

    "git.confirmSync": false,
}
