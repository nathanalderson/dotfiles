{
    "window.commandCenter": false,
    "window.titleBarStyle": "custom",
    "window.menuBarVisibility": "toggle",
    "workbench.colorTheme": "Ayu Mirage Bordered",
    "workbench.editor.showTabs": false,
    "workbench.activityBar.visible": false,
    "workbench.layoutControl.enabled": false,
    "breadcrumbs.symbolPath": "off",
    "editor.fontFamily": "'Fantasque Sans Mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontLigatures": false,
    "editor.formatOnSave": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "phase",
    "editor.cursorSurroundingLines": 3,
    "editor.minimap.enabled": false,
    "editor.find.loop": false,
    "editor.guides.indentation": false,
    "editor.inlineSuggest.enabled": true,
    "explorer.autoReveal": false,
    "explorer.decorations.badges": false,
    "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
    "files.autoSave": "onWindowChange",
    "elixirLS.suggestSpecs": false,
    "elixirLS.dialyzerFormat": "dialyxir_short",
    "elixirLS.envVariables": {
        "ELIXIR_WARNINGS_OK": "1"
    },
    "[elixir]": {
        "editor.formatOnType": true,
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "editor.tabSize": 2,
    },
    "[html-eex]": {
        "editor.formatOnType": true,
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "editor.tabSize": 2
    },
    "[html]": {
        "editor.tabSize": 2
    },
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true
    },
    "[yaml]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true,
        "editor.detectIndentation": false
    },
    "C_Cpp.default.compilerPath": "/usr/bin/x86_64-linux-gnu-gcc",
    "C_Cpp.default.cppStandard": "c++17",
    "python.formatting.provider": "black",
    "[python]": {
        "editor.formatOnType": true,
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    // This allows ctrl-p to function as "previous" in the terminal
    "terminal.integrated.commandsToSkipShell": [
        "-workbench.action.quickOpen"
    ],
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.localEchoLatencyThreshold": 100,
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "terminal.integrated.cursorStyle": "line",
    // Disabled here because automatic installation doesn't work for me. Enabled manually in .zshrc
    "terminal.integrated.shellIntegration.enabled": false,
    "debug.openDebug": "openOnDebugBreak",
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": false,
    },
    "git.confirmSync": false,
    "remote.SSH.useLocalServer": false,
    "remote.SSH.remotePlatform": {
        "nathan-desktop-zt": "linux",
        "192.168.125.2": "macOS",
        "nathan-macbook-zt": "macOS",
        "nathan-macbook": "macOS"
    },
    "alpine-intellisense.settings.languageScopes": "html,elixir,html-eex,heex",
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.diffAlgorithm": "smart",
    "window.zoomLevel": -1,
    "dart.showTestCodeLens": false,
    "dart.showMainCodeLens": false,
    "dart.showDartPadSampleCodeLens": false,
    "testing.automaticallyOpenPeekView": "never",
    "dart.closingLabels": false,
    "tailwindCSS.colorDecorators": false,
    "tailwindCSS.includeLanguages": {
        "\"elixir\"": "\"html\""
    },
    "testing.gutterEnabled": false,
    "eslint.format.enable": true,
    "[typescript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "workbench.tree.indent": 12,
    "workbench.list.smoothScrolling": true,
}