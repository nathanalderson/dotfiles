set $leftMonitor DVI-I-1 DP-1-1
set $rightMonitor DVI-I-2 DP-1-2 DP-1-3
workspace 0 output $leftMonitor
workspace 1 output $leftMonitor
workspace 2 output $leftMonitor
workspace 3 output $leftMonitor
workspace 4 output $leftMonitor
workspace 5 output $leftMonitor
workspace 0b output $rightMonitor
workspace 1b output $rightMonitor
workspace 2b output $rightMonitor
workspace 3b output $rightMonitor
workspace 4b output $rightMonitor
workspace 5b output $rightMonitor

